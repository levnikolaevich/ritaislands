@using rita.Models
@{
    ViewBag.Title = "UpdatePack";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section title
{
    @Html.Partial("_title")
}


<!-- Start Section Title -->
 <section style="border: 0px; height: 300px; background-position: center top; background-repeat: no-repeat; background-size: cover; background-image:url('@Url.Content("../../img/fon/UsFon.jpg")');" class="banner-image" id="title-page">
     <div class="container pagize" style="padding: 96px; margin: 0px;">
         <div class="row" style="margin-left: 0px;">
             <div class="span12 textaligncenter levh1" style="padding: 0px; margin-left: 0px; margin-top: 13px;">
                 <h1>Изменение в ПАКЕТЕ</h1>
             </div>
         </div>
     </div>
    </section>
<!-- End Section Ttile -->

<!-- Contact Section -->
<section id="contact">
    <div class="container">
        <!-- Title Page -->
        <div class="row margin-20">
            <div class="span12">
                <br/>
                <h3></h3>
            </div>
        </div>
        <!-- End Title Page -->
        
        <!-- Contact Form -->
        <div class="row margin-50">
            <div class="span9">
            
                <form id="contact-form" class="contact-form" action="/Admin/UpdatePack" method="POST" enctype="multipart/form-data">
                    
                    Название места: @ViewBag.Place.Name

                    <p>Имя</p>
                    <p class="contact-name">
                        <input id="packet_name" type="text" placeholder="Название пакета" value="@ViewBag.Pack.Name" name="name" />
                    </p>
                    
                    <p>Цена пакета</p>
                    <p class="contact-name">
                        <input id="contact_name" type="text" placeholder="Цена пакета" value="@(ViewBag.Pack.Price > 0 ? + (int)ViewBag.Pack.Price : ViewBag.Pack.Price)" name="price" />
                    </p>
                    
                    <p>Рейтинг пакета</p>
                    <p class="contact-name">
                        <input id="contact_name" type="text" placeholder="Рейтинг пакета" value="@ViewBag.Pack.SortNumberTab" name="SortNumberTab" />
                    </p>

                  
                    
                    <p class="contact-name" >
                        <textarea id="textRed" name="Description">@ViewBag.Pack.Description</textarea>
                    </p>
                    
                   
                    <p class="contact-name" style="display: none;">
                        <input id="contact_name" type="text" placeholder="id места" value="@ViewBag.Place.Id" name="PlaceId" />
                    </p>
                    
                     <p class="contact-name" style="display: none;">
                        <input id="contact_name" type="text" placeholder="id места" value="@ViewBag.Pack.Id" name="PackId" />
                    </p>

                
                    
               

                    <button class="submit" type="submit">Изменить</button>
                </form>
             
            </div>
           
            
        </div>
        <!-- End Contact Form -->
	</div>
</section>
<!-- End Contact Section -->

