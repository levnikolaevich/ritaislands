@using rita.Models
@{
    ViewBag.Title = "ServiceEdit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section title
{
    @Html.Partial("_title")
}

<!-- Start Section Title -->
<section style="border: 0px; height: 300px; background-position: center top; background-repeat: no-repeat; background-size: cover; background-image:url('@Url.Content("../../img/fon/UsFon.jpg")');" class="banner-image" id="title-page">
    <div class="container pagize" style="padding: 96px; margin: 0px;">
        <div class="row" style="margin-left: 0px;">
            <div class="span12 textaligncenter levh1" style="padding: 0px; margin-left: 0px; margin-top: 13px;">
                <h1>Редактирование услуг</h1>
            </div>
        </div>
    </div>
</section>
<!-- End Section Ttile -->
<!-- Action Section -->
<section id="contact">
    <div class="container">
        <!-- Action Form -->
        <div class="row margin-50">
            <div class="span12">
                <h2>Редактирование услуги</h2>
                <form method="POST" action="@Url.Action("ServiceEdit","Admin")">
                    <input name="id" type="hidden" value="@ViewBag.Service.Id" />
                    
                    <label>Имя</label>
                    <input name="name" value="@ViewBag.Service.Name" />

                    <label>Описание</label>
                    <input name="description" value="@ViewBag.Service.Description" />

                    <label>Тип услуги</label>
                    <select name="serviceTypeId">
                        @foreach (ServiceType dir in ViewBag.Types)
                        {
                            if (dir.Id == ViewBag.Service.ServiceTypeId)
                            {
                                <option value="@dir.Id" selected="">@dir.Name</option>
                            }
                            else
                            {
                                <option value="@dir.Id">@dir.Name</option>
                            }
                        }
                    </select>

                    <label>Категория услуги</label>
                    <select name="serviceCategoryId">
                        @foreach (ServiceCategory dir in ViewBag.Categories)
                        {
                            if (dir.Id == ViewBag.Service.ServiceCategoryId)
                            {
                                <option value="@dir.Id" selected="">@dir.Name</option>
                            }
                            else
                            {
                                <option value="@dir.Id">@dir.Name</option>
                            }
                        }
                    </select>

                    <br />
                    <button type="submit">Изменить</button>
                </form>
            </div>
        </div>
        <!-- End Action Form -->
    </div>
</section>
<!-- End Action Section -->