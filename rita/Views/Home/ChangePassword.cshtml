<!-- Contact Section -->
<section id="contact">
    <div class="container">

        <!-- Contact Form -->
        <div class="row margin-50">
            <div class="span11 no-animation-effects" style="margin-left: 30px !important; background-color: #FFFFFF; width: 1170px; margin-top: 50px; padding-top: 10px; border-top-left-radius: 6px; border-top-right-radius: 6px; border-bottom-left-radius: 6px; border-bottom-right-radius: 6px; box-shadow: #888888 1px 1px 2px 0px;">

                <form id="contact-form" class="form-horizontal" action="/Home/ChangePassword" method="POST" enctype="multipart/form-data">
                    @*<input type="hidden" name="returnUrl" value="@ViewBag.Ret" />*@
                    <div class="row margin-50">
                        <div class="span12" style="border-bottom-width: 5px; margin-bottom: 15px; margin-top: 10px;">
                            <h3 style="padding-left: 120px; margin-left: 70px;"><b>Изменение пароля</b></h3>
                            <hr />
                        </div>
                        <div class="span6" style="width: 550px !important; padding-left: 50px;">

                            <fieldset>


                                <div class="control-group" style="margin-bottom: 20px;">
                                    <label class="control-label" style="width: 120px;" for="input_newpassword">Новый пароль</label>
                                    <div class="controls">
                                        <input id="newpassword" name="newpassword" class="input-xlarge texta" style="width: 390px;" value="" type="password" maxlength="200" required>
                                        <label id="labelinput_newpassword" class="error alert alert-error hidden" for="input_newpassword" style="margin-bottom: 0px; margin-top: 10px; width: 229px;"></label>
                                    </div>
                                    <br>
                                </div>

                                <div class="control-group" style="margin-bottom: 20px;">
                                    <label class="control-label" style="width: 120px;" for="input_oldpassword">Старый пароль</label>
                                    <div class="controls">
                                        <input id="oldpassword" name="oldpassword" class="input-xlarge texta" style="width: 390px;" value="" type="password" maxlength="200" required>
                                        <label id="labelinput_password" class="error alert alert-error hidden" for="input_oldpassword" style="margin-bottom: 0px; margin-top: 10px; width: 229px;"></label>
                                    </div>
                                    <br>
                                </div>

                                
                                <button class="submit button-main button-small" type="submit" style="margin-left: 397px; height: 42px; padding: 7px;">Изменить пароль</button>
                                @*<br>*@
                            </fieldset>
                        </div>

                        @*Вторая половина страницы*@
                        <div class="span6" style="margin-left: 0px; padding-left: 30px;">


                        </div>

                    </div>


                </form>



            </div>


        </div>
        <!-- End Contact Form -->
    </div>
</section>
<!-- End Contact Section -->
