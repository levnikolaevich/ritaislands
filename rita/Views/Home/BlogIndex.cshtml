@{
    ViewBag.Title = "PortFolioIndex";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section title
{
    <title>@ViewBag.Portfolio.Name | RitaIslands</title>


    <meta name="description" content="@ViewBag.Portfolio.ShortText" />
    <meta name="keywords" content="@ViewBag.Portfolio.Tag" />

    <meta property="og:url" content="@Request.Url.AbsoluteUri" />
    <meta property="og:title" content="@ViewBag.Portfolio.Name  | RitaIslands" />
    <meta property="og:description" content="@ViewBag.Portfolio.ShortText" />
    <meta property="og:type" content="article" />
    <meta property="og:site_name" content="RitaIslands - свадьба за границей" />
    <meta property="og:image" content="@Url.Action("GetImageSanta","svadba-za-granicey", new {id = ViewBag.Portfolio.Image})" />

    <link rel="image_src" href="@Url.Action("GetImageSanta", "svadba-za-granicey", new { id = ViewBag.Portfolio.Image })" />
}

